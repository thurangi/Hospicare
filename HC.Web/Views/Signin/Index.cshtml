@{
    ViewData["Title"] = "Login";
}
@model HC.Web.Models.Users


<body>
    <h2>Login</h2>

    @using (Html.BeginForm("Authenticate", "Signin", FormMethod.Post, new { @class = "login-form" }))
    {
        <div>
            @Html.LabelFor(m => m.Username)
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" } )
            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
        </div>

        <div>
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
        <br />
        <div>
            <button type="submit" class="btn btn-primary">Login</button>

            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Register")'" value="SignIn">
                SignIn
            </button>
        </div>
    
    }
</body>
