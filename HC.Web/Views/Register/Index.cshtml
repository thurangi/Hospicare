
@{
    ViewData["Title"] = "Index";
}
@model HC.Web.Models.RegisterModel

<body>
    <h2>Login</h2>

    @using (Html.BeginForm("RegisterUser", "Register", FormMethod.Post, new { @class = "login-form" }))
    {
        <div>
            @Html.LabelFor(m => m.UserName)
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
        </div>

        <div>
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(m => m.ConfirmPassword)
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>       
        <div>
            @Html.LabelFor(m => m.PhoneNumber)
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
        </div>
        <br />
        <div>
            @Html.LabelFor(m => m.RoleID)
            @Html.DropDownList("Role", new List<SelectListItem>
             {
                new SelectListItem { Text = "User", Value = "1" },
                new SelectListItem { Text = "Doctor", Value = "2" },
                new SelectListItem { Text = "Nurse", Value = "2" }

             }, "Select Role", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
        </div>
        <br />
        <div>
            @Html.LabelFor(m => m.Gender)
            @Html.DropDownList("Gender", new List<SelectListItem>
              {
                 new SelectListItem { Text = "Male", Value = "1" },
                 new SelectListItem { Text = "Female", Value = "2" }
              }, "Select Gender" , new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
        </div>
        <br />
        <div>
            <button type="submit" class="btn btn-primary">Submit</button>           

        </div>

    }
</body>
